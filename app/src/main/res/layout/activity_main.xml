<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.admin.myapplication.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent">

        <corp.wmsoft.android.lib.wmavatarview.WMAvatarView
            android:id="@+id/toolbarAvatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:src="@drawable/default_avatar"
            app:wm_av_status_busy_color="@color/busy"
            app:wm_av_status_as_color="false"
            app:wm_av_status_visible="true" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btnOffline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="offline"/>

            <Button
                android:id="@+id/btnOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="online"/>

            <Button
                android:id="@+id/btnAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="away"/>

            <Button
                android:id="@+id/btnBusy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="busy"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSetEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set ''"/>

            <Button
                android:id="@+id/btnSetNull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set NULL"/>

            <Button
                android:id="@+id/btnWWW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set WWW"/>

            <Button
                android:id="@+id/btnA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set A"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnClearImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clear img"/>

            <Button
                android:id="@+id/btnSetResImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set res img "/>

            <Button
                android:id="@+id/btnSetExtImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set ext img "/>

        </LinearLayout>

    </LinearLayout>



    <corp.wmsoft.android.lib.wmavatarview.WMAvatarView
        android:id="@+id/toxAvatar"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:layout_centerInParent="true"
        app:wm_av_status_as_color="false"
        app:wm_av_status_offline_color="@color/offline"
        app:wm_av_status_online_color="@color/online"
        app:wm_av_status_away_color="@color/away"
        app:wm_av_status_busy_color="@color/busy"
        app:wm_av_status_visible="true" />

    <corp.wmsoft.android.lib.wmavatarview.WMAvatarView
        android:id="@+id/toxAvatarMedium"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_avatar"
        app:wm_av_status_visible="true" />

</RelativeLayout>