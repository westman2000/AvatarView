<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WMAvatarView">
        <attr name="wm_av_status_visible"               format="boolean" /> <!-- Is status icon visible -->
        <attr name="wm_av_status_as_color"              format="boolean" />
        <attr name="wm_av_status_offline_color"         format="color" />
        <attr name="wm_av_status_online_color"          format="color" />
        <attr name="wm_av_status_away_color"            format="color" />
        <attr name="wm_av_status_busy_color"            format="color" />
        <attr name="wm_av_is_popup_menu_visible"        format="boolean" /> <!-- Show popup menu on status icon press -->
        <attr name="wm_av_is_offline_menu_item_visible" format="boolean" /> <!-- Is visible popup menu item "Offline" -->
    </declare-styleable>

</resources>